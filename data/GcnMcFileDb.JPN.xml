<GcnMcFileDb>
	<dbInfo>
		<dbFormatVersion>0.1</dbFormatVersion>
		<dbName>GCN Memory Card File Database (JPN)</dbName>
		<dbDesc>Definitions for Japanese (NTSC) GameCube games.</dbDesc>
